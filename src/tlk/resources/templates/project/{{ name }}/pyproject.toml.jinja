[build-system]
build-backend = "poetry.core.masonry.api"
requires = ["poetry-core>=1.0.7"]

[tool.poetry]
name = "{{ name }}"
version = "0.0.0"
description = "{{ name | capitalize }}"
packages = [
    { include = "{{ pkg_name }}", from = "src" },
]

readme = "README.md"
repository = "https://github.com/"
authors = []
keywords = []
classifiers = []

[[tool.poetry.source]]
name = "PyPI"
priority = "primary"

[tool.poetry.dependencies]
python = "^{{ python_version }}"
typer = "^0.12.3"
copier = "^9.3.1"

[tool.poetry.scripts]
cli = "{{ pkg_name }}.cli:app"

[tool.poetry.group.dev.dependencies]
ipython = "^8.26.0"
pytest = "^8.3.2"
poetry-dynamic-versioning = "^1.4.0"

[tool.pytest.ini_options]
pythonpath = ["src"]
testpaths = ["tests"]

[tool.black]
line-length = 120
skip-string-normalization = true
target_version = ['py12']

[tool.pyright]
venvPath = "."
venv = ".venv"

[tool.poetry-dynamic-versioning]
enable = true
pattern  = "^(?P<base>\\d+\\.\\d+\\.\\d+)(-?((?P<stage>[a-zA-Z]+)\\.?(?P<revision>\\d+)?))?"

